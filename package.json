{
  "name": "base",
  "version": "1.0.0",
  "description": "base template to work",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "css:scss": "node-sass --output-style compressed -o dist src/scss",
    "css:autoprefixer": "postcss -u autoprefixer -r dist/css/*.css",
    "css:lint": "stylelint src/scss/*.scss --syntax scss || true",
    "watch:css": "onchange \"src/scss\" -- npm run build:css",
    "build:css": "npm run css:lint && npm run css:scss && npm run css:autoprefixer",
    "serve": "browser-sync start --server \"dist\" --files \"dist\"",
    "build:images": "imagemin src/images/**/* --out-dir=dist/images",
    "watch:images": "onchange \"src/images\" -- npm run build:images",
    "build:js": "webpack --mode=production",
    "watch:js": "onchange \"src/js\" -- webpack --mode=development",
    "build:html": "posthtml -c posthtml.json",
    "watch:html": "onchange \"src/views\" -- npm run build:html",
    "build:tail": "postcss src/scss/tailwind.css -o dist/css/tailwind.css",
    "watch:tail": "onchange \"src/views\" -- npm run build:tail",
    "watch": "run-p serve watch:*",
    "build": "run-p build:*"
  },
  "author": "CinquinAndy",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.14.2",
    "autoprefixer": "^10.2.5",
    "babel-loader": "^8.2.2",
    "browser-sync": "^2.26.14",
    "eslint": "^7.26.0",
    "eslint-loader": "^4.0.2",
    "htmlnano": "^1.0.0",
    "imagemin-cli": "^6.0.0",
    "node-sass": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^8.3.1",
    "posthtml": "^0.15.2",
    "posthtml-cli": "^0.9.2",
    "posthtml-modules": "^0.7.4",
    "stylelint": "^13.13.1",
    "tailwindcss": "^2.1.2",
    "webpack": "^5.37.1",
    "webpack-cli": "^4.7.0"
  }
}
